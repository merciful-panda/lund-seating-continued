@model LundSeating.Models.EventSponsor

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>EventSponsor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventID" class="control-label"></label>
                <select asp-for="EventID" class ="form-control" asp-items="ViewBag.EventID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SponsorID" class="control-label"></label>
                <select asp-for="SponsorID" class ="form-control" asp-items="ViewBag.SponsorID"></select>
            </div>
