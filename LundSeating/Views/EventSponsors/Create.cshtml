                <label asp-for="HostID" class="control-label"></label>
                <select asp-for="HostID" class ="form-control" asp-items="ViewBag.HostID"></select>
            </div>
            <div class="form-group">
                <label asp-for="SponsorshipLevel" class="control-label"></label>
                <select asp-for="SponsorshipLevel" class="form-control" asp-items="Html.GetEnumSelectList<SponsorshipLevel>()"></select>
                <span asp-validation-for="SponsorshipLevel" class="text-danger"></span>
            </div>
