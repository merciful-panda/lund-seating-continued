@model IEnumerable<LundSeating.Models.Guest>

<form method="post" asp-action="AddGuest2Event" asp-controller="Events" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <input type="hidden" value="@ViewBag.EID" name="EventID" />
        <tr>
            <td>
                <div style="float: left;">
                    <input type="checkbox" id="Check_all_guests" name="Check_all_guests">
                    <label for="Check_all_guests" >
                        Check all
                    </label>
                </div>
            </td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <input type="checkbox" name="guests[]" value="@item.GuestID" />

                </td>
            </tr>
        }
        <button type="submit" class="btn btn-default">Add to Event</button>
    </tbody>

</table>